<h1 class="text-blue-600 mt-36">Add new comments</h1>

<%= form_with model: @comment, url: user_post_comments_path, method: :post, local: true, scope: :comment do |form| %>
  <div class="mb-4">
    <%= form.label :text %><br>
    <%= form.text_area %>
  </div>
  <%= form.submit "Add Comment" %>
<% end %>